// Place your key bindings in this file to override the defaultsauto[]
[
    // Sidebar Section
    {
        "key": "cmd+1",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    {
        "key": "cmd+2",
        "command": "workbench.files.action.showActiveFileInExplorer"
    },
    {
        "key": "cmd+4",
        "command": "workbench.action.nextSideBarView"
    },

    // Terminal Section
    {
        "key": "cmd+3",
        "command": "workbench.action.terminal.toggleTerminal"
    },

    // Toolbar Section
    {
        "key": "oem_comma s",
        "command": "workbench.action.toggleStatusbarVisibility",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Normal'"
    },
    {
        "key": "oem_comma a",
        "command": "workbench.action.toggleActivityBarVisibility",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Normal'"
    },
    {
        "key": "oem_comma t",
        "command": "workbench.action.toggleTabsVisibility",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Normal'"
    },

    // PHP Section
    {
        "key": "cmd+t",
        "command": "better-phpunit.run"
    },
    {
        "key": "shift+t",
        "command": "better-phpunit.run-previous",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Normal'"
    },
    {
        "key": "cmd+shift+t",
        "command": "better-phpunit.run-suite",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Normal'"
    },
    {
        "key": "cmd+b",
        "command": "php-cs-fixer.fix"
    },

    // ProjectManager Section
    {
        "key": "cmd+alt+p",
        "command": "projectManager.listProjects"
    },

    // Window Section
    {
        "key": "cmd+alt+1",
        "command": "workbench.action.editorLayoutSingle"
    },
    {
        "key": "shift+oem_1 v",
        "command": "workbench.action.splitEditorRight",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Normal'"
    },
    {
        "key": "shift+oem_1 s",
        "command": "workbench.action.splitEditorDown",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Normal'"
    },
    {
        "key": "shift+l",
        "command": "workbench.action.moveEditorToRightGroup",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Normal'"
    },
    {
        "key": "shift+h",
        "command": "workbench.action.moveEditorToLeftGroup",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Normal'"
    },
    {
        "key": "shift+j",
        "command": "editor.action.joinLines",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Normal'"
    },
    {
        "key": "shift+k",
        "command": "workbench.action.moveEditorToAboveGroup",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Normal'"
    },
    {
        "key": "1 1",
        "command": "workbench.action.decreaseViewSize",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Normal'"
    },
    {
        "key": "2 2",
        "command": "workbench.action.evenEditorWidths",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Normal'"
    },
    {
        "key": "3 3",
        "command": "workbench.action.increaseViewSize",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Normal'"
    },

    // Cursor Section
    {
        "key": "shift+alt+k",
        "command": "editor.action.insertCursorAbove",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+alt+j",
        "command": "editor.action.insertCursorBelow",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+j",
        "command": "cursorPageDown",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Normal'"
    },
    {
        "key": "alt+k",
        "command": "cursorPageUp",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Normal'"
    },
    {
        "key": "cmd+l cmd+l",
        "command": "workbench.action.focusRightGroup"
    },
    {
        "key": "cmd+h cmd+h",
        "command": "workbench.action.focusLeftGroup"
    },
    {
        "key": "cmd+k cmd+k",
        "command": "workbench.action.focusAboveGroup"
    },
    {
        "key": "cmd+j cmd+j",
        "command": "workbench.action.focusBelowGroup"
    },
    {
        "key": "alt+l",
        "command": "editor.action.insertCursorAtEndOfEachLineSelected",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode != 'Normal' && vim.mode != 'Insert'"
    },
    {
        "key": "oem_comma g",
        "command": "editor.action.revealDefinitionAside",
        "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor && vim.active && !inDebugRepl && vim.mode == 'Normal'"
    },
    {
        "key": "oem_comma shift+g",
        "command": "workbench.action.navigateBack",
        "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor && vim.active && !inDebugRepl && vim.mode == 'Normal'"
    },

    // Others
    {
        "key": "alt+enter",
        "command": "editor.action.showContextMenu",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+r",
        "command": "workbench.action.gotoSymbol"
    },
    {
        "key": "shift+x",
        "command": "workbench.action.reopenClosedEditor",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Normal'"
    },
    {
        "key": "shift+r",
        "command": "workbench.action.showAllSymbols",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Normal'"
    },
    {
        "key": "shift+s",
        "command": "editor.action.deleteLines",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode != 'Insert'"
    },
    {
        "key": "Backspace",
        "command": "editor.action.commentLine",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode != 'Insert'"
    },

    // Removed Section
    {
        "key": "cmd+b",
        "command": "-workbench.action.toggleSidebarVisibility"
    },
    {
        "key": "cmd+k cmd+b",
        "command": "-workbench.action.toggleSidebarVisibility"
    },
    {
        "key": "cmd+oem_3",
        "command": "-workbench.action.terminal.toggleTerminal"
    },
    {
        "key": "win+k win+r",
        "command": "-better-phpunit.run"
    },
    {
        "key": "win+k win+p",
        "command": "-better-phpunit.run-previous"
    },
    {
        "key": "alt+f12",
        "command": "-editor.action.showContextMenu",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+alt+p",
        "command": "-projectManager.listProjects"
    },
]
